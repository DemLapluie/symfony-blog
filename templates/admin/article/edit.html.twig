{% extends 'base.html.twig' %}


{% block body %}

    <h1>Edition articles</h1>

    {{ form_start(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.category) }}
    {{ form_row(form.image) }}

    {% if original_image is not null %}
        <p>
            Actuellement :
            <img src="{{ asset('images/' ~ original_image) }}" alt="" height="200px">
        </p>
    {% endif %}

    <div class="form-btn-group text-right">
        <button type="submit" class="btn btn-primary">
            Enregistrer
        </button>
        <a href="{{ path('app_admin_article_index') }}" class="btn btn-outline-secondary">
            Retour
        </a>
    </div>

    {{ form_end(form) }}
{% endblock %}
